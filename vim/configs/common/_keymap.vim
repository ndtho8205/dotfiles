"" map leader to ,
let mapleader=','

"" map for avoid pressing ESC key
inoremap jk <ESC>
inoremap kj <ESC>

"" map for quickly reload .vimrc
nnoremap <leader>rv :source ~/.vimrc<CR>

"" map for quickly edit a file
nnoremap <leader>e :e **/*
nnoremap <leader>vs :vs **/*
nnoremap <leader>sp :sp **/*
